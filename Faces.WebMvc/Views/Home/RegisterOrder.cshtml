@model Faces.WebMvc.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "RegisterOrder";
}

<div>
    <img src="~/images/faceslogo.png" alt="Alternate Text" />
    <h2>Order Registration</h2>
</div>

<form asp-controller="Home" asp-action="RegisterOrder" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <h3>Enter your email address and upload your face picture</h3>
            <div class="form-group">
                <label asp-for="UserEmail"></label>
                <input asp-for="UserEmail" class="form-control" />

            </div>
        </div>
        <div class="col-md-4">
            <p>Upload your image file using the button below</p>
            <input type="file" name="file" />
        </div>

    </div>
    <input type="submit" class="btn btn-info"  value="Submit" />

</form>

